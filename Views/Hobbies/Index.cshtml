@*@model IEnumerable<Me.Models.Hobby>*@
@model Me.Models.HobbyDescriptionViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Hobbies" asp-action="Index" method="get">
    <p>
        <select asp-for="HobbyDescription" asp-items="Model.WordInDescriptions">
            <option value="">All</option>
        </select>
        Title: <input type="text" name="SearchWord"/>
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hobbies![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hobbies![0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hobbies![0].LastWorkedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hobbies![0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Hobbies!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastWorkedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
